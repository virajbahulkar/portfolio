{
  "name": "Viraj Bahulkar Portfolio (Node 18)",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "astro",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "hostRequirements": { "cpus": 2 },
  "forwardPorts": [4321],
  "portsAttributes": {
    "4321": { "label": "Astro Dev", "onAutoForward": "openBrowser" }
  },
  "updateContentCommand": "if [ ! -d node_modules ]; then npm ci; fi",
  "postCreateCommand": "npm run build-types || true",
  "customizations": {
    "codespaces": { "openFiles": ["src/pages/index.astro"] },
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
